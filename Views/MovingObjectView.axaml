<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MoveObject.ViewModels"
             x:DataType="viewModels:MovingObjectViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MoveObject.Views.MovingObjectView">
    
    <Design.DataContext>
        <viewModels:MovingObjectViewModel></viewModels:MovingObjectViewModel>
    </Design.DataContext>
    
    <StackPanel>
           <Canvas>
               <Rectangle Width="50" Height="50" Fill="{Binding Color}" Canvas.Left="{Binding XPosition}" Canvas.Top="{Binding YPosition}" />
           </Canvas>
           <Button Content="Move" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Command="{Binding MoveCommand}" />
       </StackPanel>
</UserControl>
