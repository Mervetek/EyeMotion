<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:EmdrProject.ViewModels"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" 
        x:Class="EmdrProject.Views.SettingsView"
        x:DataType="viewModels:SettingsViewModel">
   
    <Design.DataContext>
        <viewModels:SettingsViewModel RepeatCount="30" Speed="10" Color="Red" ShapeType="Rectangle" />
    </Design.DataContext>
    
    
    <Border CornerRadius="4" Padding="16">
        <StackPanel Spacing="8">
            <avalonia:MaterialIcon
                Kind="Home"
                Foreground="Red"
                Background="Red"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="32"
                Height="32" />
            <!-- Period -->
            <UniformGrid Columns="2">
                <TextBlock Text="Period:" VerticalAlignment="Center" />
                <TextBox Text="{Binding RepeatCount}" />
            </UniformGrid>
    
            <!-- Speed -->
            <UniformGrid Columns="2">
                <TextBlock Text="Speed:" VerticalAlignment="Center" />
                <NumericUpDown Minimum="1" Maximum="100"
                               Increment="1" Value="1"
                               Text="{Binding Speed}" />
            </UniformGrid>
    
            <!-- Color -->
          <UniformGrid Columns="2">
              <TextBlock Text="Color:" VerticalAlignment="Center" />
              <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch">
                  <ComboBoxItem>Red</ComboBoxItem>
                  <ComboBoxItem>Green</ComboBoxItem>
                  <ComboBoxItem>Blue</ComboBoxItem>
                  <ComboBoxItem>Black</ComboBoxItem>
              </ComboBox>
          </UniformGrid>
    
            <!-- Shape -->
            <UniformGrid Columns="2">
                <TextBlock Text="Shape:" VerticalAlignment="Center" />
                <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch">
                    <ComboBoxItem>Triangle</ComboBoxItem>
                    <ComboBoxItem>Rectangle</ComboBoxItem>
                    <ComboBoxItem>Circle</ComboBoxItem>
                </ComboBox>
            </UniformGrid>
        </StackPanel>
    </Border>
   
</UserControl>
